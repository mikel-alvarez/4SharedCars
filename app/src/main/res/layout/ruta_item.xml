<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgFotoPerfilUsuario"
        android:layout_width="102dp"
        android:layout_height="85dp"
        app:srcCompat="@drawable/silueta" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp">

            <TextView
                android:id="@+id/txtNombreUsuarioItem"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="Nombre" />

            <TextView
                android:id="@+id/txtApellidoUsuarioItem"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Aapellido" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtFechaItem"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:text="Fecha" />

            <TextView
                android:id="@+id/txtHoraSalidaItem"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:text="Hora de Salida" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtRutaItem"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:text="Ruta" />

            <TextView
                android:id="@+id/txtHuecosLibresItem"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:text="Huecos Libres" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>