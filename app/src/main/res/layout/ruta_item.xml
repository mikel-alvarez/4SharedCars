<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgFotoPerfilUsuario"
            android:layout_width="97dp"
            android:layout_height="75dp"
            app:srcCompat="@drawable/silueta" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtNombreUsuarioItem"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:text="Nombre" />

                <TextView
                    android:id="@+id/txtApellidoUsuarioItem"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Aapellido" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtFechaItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="4dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="      "
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/txtHoraSalidaItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hora de Salida" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnReservaItem"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reservar"
                    android:textSize="11sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtRutaItem"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Ruta" />

                <TextView
                    android:id="@+id/txtHuecosLibresItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Huecos Libres" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>